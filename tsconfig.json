{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
